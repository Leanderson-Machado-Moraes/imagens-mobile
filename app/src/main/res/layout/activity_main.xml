<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/lightblue">


    <LinearLayout
        android:id="@+id/layoutH"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgHappy"
            android:layout_width="267dp"
            android:layout_height="177dp"
            app:srcCompat="@drawable/happy" />

        <TextView
            android:id="@+id/txtHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="Foto do Happy"
            android:layout_marginTop="70dp"
            android:textColor="@color/black"
            android:textSize="20dp"


            />
    </LinearLayout>

    <Button
        android:id="@+id/btnHappy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exibir foto do Happy"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/layoutH"
        android:backgroundTint="@color/darkblue"
        android:padding="15dp"/>

    <Button
        android:id="@+id/btnDbd"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:text="Exibir foto do GhostFace"
        android:layout_below="@id/btnHappy"
        android:backgroundTint="@color/darkblue"
        android:padding="15dp"/>

</RelativeLayout>